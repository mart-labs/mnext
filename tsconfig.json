{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "declaration": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/**/**/stories",
    "src/components/ui",
    "src/stories",
    "dist"
  ]
}
