{
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "declaration": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/**/**/stories",
    "src/components/ui/**",
    "src/lib/*.ts",
    "src/stories",
    "dist"
  ]
}
